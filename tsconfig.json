{
    "compilerOptions": {
      "target": "ESNext",   // To ensure latest features
      "module": "ESNext",  // For native ES Modules
      "moduleResolution": "node", // Node.js module resolution
      "esModuleInterop": true,  // Allow default imports from CommonJS
      "outDir": "./dist",       // Output directory for compiled files
      "rootDir": "./src",       // Source files directory
      "resolveJsonModule": true,
      "skipLibCheck": true,     // Skip type checking of all declaration files
      "strict": true,
      "declaration": true,      // Generates corresponding .d.ts file,
      "preserveSymlinks": true, // Preserve symbolic links when resolving modules
    },
    "baseUrl": "./",
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }